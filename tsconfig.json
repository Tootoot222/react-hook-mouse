{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "outDir": "./dist",
    "declarationDir": "./dist",
    "declaration": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "rollup.config.js",
    "**/*.test.js",
    "**/*.test.ts"
  ],
  "include": [
    "src/**/*"
  ]
}

